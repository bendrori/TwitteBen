<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.bend.twitterben">

  <application
      android:allowBackup="true"
      android:icon="@drawable/twitter_ben_icon"
      android:label="Ben Twitter"
      android:roundIcon="@mipmap/ic_launcher_round"
      android:supportsRtl="true"
      android:theme="@style/AppTheme"
      tools:ignore="GoogleAppIndexingWarning">
    <activity android:name=".start.start.view.StartActivity">
      <intent-filter>
        <action android:name="android.intent.action.MAIN"/>

        <category android:name="android.intent.category.LAUNCHER"/>
      </intent-filter>
    </activity>
    <activity
        android:name=".start.signing.view.SigningActivity"
        android:windowSoftInputMode="adjustResize">
    </activity>
    <activity
        android:name=".start.register.view.RegisterActivity"
        android:windowSoftInputMode="adjustResize">
    </activity>
    <activity android:name=".start.main.view.MainActivity">
    </activity>
    <activity android:name=".start.tweet.view.TweetActivity">
    </activity>
    <activity android:name=".start.messagesselection.view.MessagesSelectionActivity">
    </activity>
    <activity android:name=".start.messagesroom.view.MessagesRoomActivity">
    </activity>
  </application>

</manifest>