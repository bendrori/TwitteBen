<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

  <de.hdodenhof.circleimageview.CircleImageView
      android:id="@+id/profileImageViewMessageCellId"
      android:layout_width="40dp"
      android:layout_height="40dp"
      android:layout_marginBottom="16dp"
      android:layout_marginLeft="16dp"
      android:layout_marginStart="16dp"
      android:layout_marginTop="16dp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      android:src="@drawable/eran"
      />
  <TextView
      android:id="@+id/nameTextViewMessageCellId"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginLeft="16dp"
      android:layout_marginStart="16dp"
      android:textStyle="bold"
      android:textColor="@android:color/background_dark"
      android:text="TextView"
      app:layout_constraintStart_toEndOf="@+id/profileImageViewMessageCellId"
      app:layout_constraintTop_toTopOf="@+id/profileImageViewMessageCellId"
      />
  <TextView
      android:id="@+id/lastMessageTextViewMessageCellId"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="TextView"
      app:layout_constraintBottom_toBottomOf="@+id/profileImageViewMessageCellId"
      app:layout_constraintStart_toStartOf="@+id/nameTextViewMessageCellId"
      app:layout_constraintTop_toBottomOf="@+id/nameTextViewMessageCellId"
      />
</android.support.constraint.ConstraintLayout>