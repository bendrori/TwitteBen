<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".start.start.view.StartActivity"
    >

  <ImageView
      android:id="@+id/imageView"
      android:layout_width="40dp"
      android:layout_height="40dp"
      android:layout_marginBottom="395dp"
      android:layout_marginEnd="268dp"
      android:layout_marginLeft="32dp"
      android:layout_marginRight="268dp"
      android:layout_marginStart="32dp"
      android:layout_marginTop="16dp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.0"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.3"
      app:srcCompat="@drawable/twitter_ben_icon"
      />
  <TextView
      android:id="@+id/textView"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginBottom="8dp"
      android:layout_marginEnd="32dp"
      android:layout_marginLeft="32dp"
      android:layout_marginRight="32dp"
      android:layout_marginStart="32dp"
      android:layout_marginTop="8dp"
      android:text="@string/startText"
      android:textColor="@android:color/black"
      android:textSize="32dp"
      android:textStyle="bold"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="1.0"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.39"
      />
  <Button
      android:id="@+id/getStartButtonId"
      android:layout_width="0dp"
      android:layout_height="40dp"
      android:layout_marginTop="30dp"
      android:background="@drawable/radius_button_get_started"
      android:text="@string/get_started_button"
      android:textAppearance="@style/TextAppearance.AppCompat"
      android:textColor="@android:color/background_light"
      android:textSize="18dp"
      android:textStyle="bold"
      app:layout_constraintEnd_toEndOf="@+id/textView"
      app:layout_constraintStart_toStartOf="@+id/textView"
      app:layout_constraintTop_toBottomOf="@+id/textView"
      />
  <TextView
      android:id="@+id/loginTextViewId"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginBottom="24dp"
      android:text="Have an account alredy? Log in"
      android:textColor="@android:color/black"
      android:textSize="16sp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="@+id/getStartButtonId"
      app:layout_constraintStart_toStartOf="@+id/getStartButtonId"
      />
</android.support.constraint.ConstraintLayout>