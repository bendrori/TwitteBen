<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".start.tweet.view.TweetActivity"
    >

  <Button
      android:id="@+id/newTweetButtonId"
      android:layout_width="wrap_content"
      android:layout_height="50dp"
      android:layout_marginBottom="8dp"
      android:layout_marginEnd="8dp"
      android:layout_marginRight="8dp"
      android:background="@drawable/radius_button_get_started"
      android:text="tweet"
      android:textColor="@android:color/white"
      android:textStyle="bold"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      />

  <EditText
      android:id="@+id/newTweetEditTextId"
      android:layout_width="0dp"
      android:layout_height="0dp"
      android:ems="10"
      android:padding="16dp"
      android:background="@android:color/transparent"
      android:hint="Enter your tweet"
      android:inputType="textPersonName"
      app:layout_constraintBottom_toBottomOf="@+id/newTweetButtonId"
      app:layout_constraintEnd_toStartOf="@+id/newTweetButtonId"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="@+id/newTweetButtonId"
      />
</android.support.constraint.ConstraintLayout>