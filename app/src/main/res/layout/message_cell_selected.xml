<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

  <de.hdodenhof.circleimageview.CircleImageView
      android:id="@+id/profileImageViewCellId"
      android:layout_width="40dp"
      android:layout_height="40dp"
      android:layout_marginBottom="16dp"
      android:layout_marginEnd="300dp"
      android:layout_marginRight="300dp"
      android:layout_marginTop="16dp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      android:src="@drawable/twitter_ben_icon"
      />
  <TextView
      android:id="@+id/messageSelectedNameTextViewCellId"
      android:layout_width="wrap_content"
      android:layout_height="0dp"
      android:layout_marginEnd="8dp"
      android:layout_marginLeft="8dp"
      android:layout_marginRight="8dp"
      android:layout_marginStart="8dp"
      android:gravity="center"
      tools:text="TextView"
      android:textSize="18sp"
      android:textStyle="bold"
      app:layout_constraintBottom_toBottomOf="@+id/profileImageViewCellId"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="@+id/profileImageViewCellId"
      />
</android.support.constraint.ConstraintLayout>