<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

  <de.hdodenhof.circleimageview.CircleImageView
      android:id="@+id/fromMessageImageId"
      android:layout_width="45dp"
      android:layout_height="45dp"
      android:layout_marginBottom="16dp"
      android:layout_marginRight="16dp"
      android:layout_marginTop="16dp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      android:src="@drawable/eran"
      />
  <TextView
      android:id="@+id/fromMessageTextId"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginRight="16dp"
      android:textColor="@android:color/white"
      android:background="@drawable/radius_from_message"
      android:gravity="right"
      android:padding="12dp"
      android:text="TextView"
      app:layout_constraintRight_toLeftOf="@+id/fromMessageImageId"
      app:layout_constraintTop_toTopOf="@+id/fromMessageImageId"
      />
</android.support.constraint.ConstraintLayout>