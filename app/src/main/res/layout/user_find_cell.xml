<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

  <TextView
      android:id="@+id/findCellTextViewId"
      android:layout_width="wrap_content"
      android:layout_height="0dp"
      android:layout_marginLeft="16dp"
      android:layout_marginRight="16dp"
      android:text="User Name"
      android:textColor="@android:color/black"
      android:textStyle="bold"
      app:layout_constraintLeft_toRightOf="@+id/findCellImageViewId"
      app:layout_constraintTop_toTopOf="@+id/findCellImageViewId"
      />
  <Button
      android:id="@+id/findCellFollowButtonId"
      android:layout_width="wrap_content"
      android:layout_height="40dp"
      android:layout_marginRight="16dp"
      android:background="@drawable/radius_button_follow"
      android:gravity="center"
      android:text="Follow"
      android:textAllCaps="false"
      android:textColor="@color/blue_twitter"
      android:textStyle="bold"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toTopOf="@+id/findCellTextViewId"
      />
  <de.hdodenhof.circleimageview.CircleImageView
      android:id="@+id/findCellImageViewId"
      android:layout_width="40dp"
      android:layout_height="40dp"
      android:layout_marginBottom="16dp"
      android:layout_marginLeft="16dp"
      android:layout_marginRight="16dp"
      android:layout_marginTop="16dp"
      android:src="@drawable/eran"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      />
</android.support.constraint.ConstraintLayout>