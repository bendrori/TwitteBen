<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/activity_registerId"
    tools:context=".start.register.view.RegisterActivity"
    >
  <android.support.v7.widget.Toolbar
      android:id="@+id/my_toolbar"
      xmlns:android="http://schemas.android.com/apk/res/android"
      app:theme="@style/ToolbarColoredBackArrow"
      app:popupTheme="@style/AppTheme"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="@android:color/transparent"
      android:minHeight="@dimen/abc_action_bar_default_height_material"
      >

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:src="@drawable/twitter_ben_icon"/>
  </android.support.v7.widget.Toolbar>

  <EditText
      android:id="@+id/nameEditTextRegisterId"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginBottom="8dp"
      android:ems="10"
      android:windowSoftInputMode="adjustResize"
      android:inputType="textPersonName"
      android:hint="Name"
      app:layout_constraintBottom_toTopOf="@+id/guideline"
      app:layout_constraintRight_toRightOf="@+id/textView2"
      app:layout_constraintLeft_toLeftOf="@+id/textView2"
      />

  <TextView
      android:id="@+id/textView2"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginLeft="24dp"
      android:layout_marginRight="24dp"
      android:layout_marginTop="16dp"
      android:gravity="center"
      android:text="Create your account"
      android:textAllCaps="false"
      android:textAppearance="@style/TextAppearance.AppCompat"
      android:textSize="30sp"
      android:textStyle="bold"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintHorizontal_bias="0.0"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/my_toolbar"
      />
  <EditText
      android:id="@+id/emailEditTextRegisterId"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginTop="8dp"
      android:ems="10"
      android:hint="@string/phone_number_or_email"
      android:windowSoftInputMode="adjustResize"
      android:inputType="textEmailAddress"
      app:layout_constraintRight_toRightOf="@+id/nameEditTextRegisterId"
      app:layout_constraintLeft_toLeftOf="@+id/nameEditTextRegisterId"
      app:layout_constraintTop_toBottomOf="@+id/guideline"
      />

  <android.support.constraint.Guideline
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:id="@+id/guideline"
      android:orientation="horizontal"
      app:layout_constraintGuide_percent="0.5"/>
  <Button
      android:id="@+id/nextButtonRegisterId"
      android:layout_width="60dp"
      android:layout_height="30dp"
      android:layout_marginBottom="16dp"
      android:layout_marginRight="16dp"
      android:text="Next"
      android:textColor="@android:color/white"
      android:background="@drawable/radius_button_next_register"
      android:textAllCaps="false"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      />

  <Button
      android:id="@+id/addImageButtonRegisterId"
      android:layout_width="60dp"
      android:layout_height="30dp"
      android:background="@drawable/radius_button_next_register"
      android:text="add Image"
      android:textAllCaps="false"
      android:textColor="@android:color/white"
      android:textSize="10sp"
      app:layout_constraintBottom_toBottomOf="@+id/nextButtonRegisterId"
      app:layout_constraintRight_toRightOf="@+id/passwordEditTextRegisterId"
      app:layout_constraintLeft_toLeftOf="@+id/passwordEditTextRegisterId"
      app:layout_constraintTop_toTopOf="@+id/nextButtonRegisterId"
      />
  <EditText
      android:id="@+id/passwordEditTextRegisterId"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginTop="16dp"
      android:ems="10"
      android:hint="Password"
      android:inputType="textPassword"
      app:layout_constraintRight_toRightOf="@+id/emailEditTextRegisterId"
      app:layout_constraintLeft_toLeftOf="@+id/emailEditTextRegisterId"
      app:layout_constraintTop_toBottomOf="@+id/emailEditTextRegisterId"
      />
  <ProgressBar
      android:id="@+id/imageProgressBarId"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginBottom="16dp"
      android:visibility="gone"
      android:max="100"
      android:min="0"
      app:layout_constraintBottom_toTopOf="@+id/addImageButtonRegisterId"
      app:layout_constraintRight_toRightOf="@+id/passwordEditTextRegisterId"
      app:layout_constraintLeft_toLeftOf="@+id/passwordEditTextRegisterId"
      style="?android:attr/progressBarStyleHorizontal"
      />


</android.support.constraint.ConstraintLayout>