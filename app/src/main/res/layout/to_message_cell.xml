<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

  <de.hdodenhof.circleimageview.CircleImageView
      android:id="@+id/toMessageImageId"
      android:layout_width="45dp"
      android:layout_height="45dp"
      android:layout_marginBottom="11dp"
      android:layout_marginLeft="16dp"
      android:layout_marginStart="16dp"
      android:layout_marginTop="16dp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      android:src="@drawable/eran"
      />
  <TextView
      android:id="@+id/toMessageTextId"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginLeft="16dp"
      android:layout_marginStart="16dp"
      android:textColor="@android:color/black"
      android:background="@drawable/radius_to_message"
      android:gravity="left"
      android:padding="12dp"
      android:text="TextView"
      app:layout_constraintStart_toEndOf="@+id/toMessageImageId"
      app:layout_constraintTop_toTopOf="@+id/toMessageImageId"
      />
</android.support.constraint.ConstraintLayout>